@model Product

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row">
            <h2>Edit Product</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row mb-3 p-1">
            <label asp-for="Title" class="p-0"></label>
            <input type="text" class="form-control" asp-for="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Description" class="p-0"></label>
            <input type="text" class="form-control" asp-for="Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="ISBN" class="p-0"></label>
            <input type="text" class="form-control" asp-for="ISBN" />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Author" class="p-0"></label>
            <input type="text" class="form-control" asp-for="Author" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="ListPrice" class="p-0"></label>
            <input type="number" class="form-control" asp-for="ListPrice" />
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Price" class="p-0"></label>
            <input type="number" class="form-control" asp-for="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Price50" class="p-0"></label>
            <input type="number" class="form-control" asp-for="Price50" />
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Price100" class="p-0"></label>
            <input type="number" class="form-control" asp-for="Price100" />
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="index" class="btn btn-secondary form-control">Back To List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}